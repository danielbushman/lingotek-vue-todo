.vue-app-bar {
  z-index: 2;
  height: 56px;
  width: 100%;
  background: #646464;
  display: flex;
  align-items: center;
  box-shadow: 0 1px 8px 0 rgba(0, 0, 0, 0.2), 0 3px 4px 0 rgba(0, 0, 0, 0.14),
    0 3px 3px -2px rgba(0, 0, 0, 0.12);
  #user-avatar {
    border: 1px solid #777;
    border-radius: 3px;
  }
  .logo {
    margin-left: 8px;
    margin-right: 20px;
  }
  .app {
    font-size: 16px;
    padding: 0px 5px 0px;
    margin-left: 4px;
    margin-right: 36px;
    transition: 200ms;
    color: white;
    text-decoration: none !important;
    &:visited {
      color: white !important;
    }
    &:hover {
      color: white !important;
    }
  }
  .highlighted {
    position: relative;
    top: 1px;
    border-bottom: 3px solid #f57c00;
    font-weight: bold;
  }
  .username {
    color: rgba(white, 0.87);
    font-size: 14px;
    margin-right: 8px;
    cursor: pointer;
    &:hover {
      color: white;
    }
  }
  .organization {
    color: rgba(white, 0.87);
    font-size: 10px;
    cursor: pointer;
    &:hover {
      color: white;
    }
  }
}
