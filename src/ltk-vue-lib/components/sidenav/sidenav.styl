.side-nav-container {
  // min-height: 500px;
  z-index: 1;
  .vue-side-nav {
    z-index: 51;
    flex: 1 1 auto;
    width:56px;
    height:100%;
    background: white;
    background: var(--card-background);
    box-shadow: var(--box-shadow-3);
    display: flex;
    flex-direction: column;
    transition: var(--transition);
    &.side-nav-expanded {
      width: 240px;
    }
  }
  .mask {
    z-index: 51;
    position: fixed;
    top: 0px;
    left: 0px;
    width: 100%;
    height: 100%;
  }
  .button-container {
    $text-color = rgba(black, .54);
    color: $text-color;
    color: var(--font-color);
    cursor: pointer;
    position: relative;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    &.active {
      background: #e0e0e0;
    }
    &:hover {
      background: #e0e0e0;
    }
    &.current-page {
      background: #e0e0e0;
    }
    .side-nav-button {
      width:56px;
      height: 56px;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-shrink: 0;
      border: none;
      background: transparent;
      text-decoration: none;
      color: rgba(white, .62);
      color: var(--font-color);
      &:hover {
        color: var(--font-color);
      }
      div {
        transition: all .4s cubic-bezier(.25,.8,.25,1);
        user-select: none;
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: .54;
        &.flipped {
          transform: rotate(180deg);
        }
      }
    }
  }
}
